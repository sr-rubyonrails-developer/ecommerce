  <div class="card-img-overlay">
    <h2 class="card-title"><%= @product.nombre %></h2>

    <p class="card-text">
      <strong>Clave:</strong>
      <%= @product.clave %>
    </p>

    <p class="card-text">
      <strong>Precio de venta:</strong>
      <%= @product.precio_de_venta %>
    </p>

    <p class="card-text">
      <strong>Stock:</strong>
      <%= @product.stock %>
    </p>

    <p class="card-text">
      <strong>Descripci√≥n:</strong>
      <%= @product.descripcion %>
    </p>

    <p class="card-text">
      <strong>Color:</strong>
      <%= @product.color %>
